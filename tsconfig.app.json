{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["vite.config.*", "env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "isolatedModules": true,
    "sourceMap": true, // 生成目标文件的 sourceMap
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
